{
  "manifest_version": 3,
  "name": "PR Shepherd",
  "version": "1.0.0",
  "description": "Track and manage GitHub PRs you're shepherding",
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*"
  ],
  "action": {
    "default_title": "PR Shepherd",
    "default_icon": "icon.svg"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/pull/*"],
      "js": ["storage.js", "content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
